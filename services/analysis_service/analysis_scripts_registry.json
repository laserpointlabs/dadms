  "sensitivity_analysis": {
    "id": "sensitivity_analysis", 
    "name": "Decision Sensitivity Analysis",
    "description": "Perform sensitivity analysis on decision alternatives with weight variations",
    "version": "1.0",
    "category": "decision_analysis",
    "source_type": "local_file",
    "source_location": "scripts/decision/sensitivity_analysis.py",
    "execution_type": "python",
    "input_schema": {
      "type": "object",
      "required": ["alternatives", "criteria", "base_weights"],
      "properties": {
        "alternatives": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "scores": {"type": "object"}
            }
          }
        },
        "criteria": {
          "type": "array",
          "items": {
            "type": "object", 
            "properties": {
              "criterion": {"type": "string"},
              "weight": {"type": "number"},
              "description": {"type": "string"}
            }
          }
        },
        "base_weights": {
          "type": "object",
          "description": "Current weights for each criterion"
        },
        "sensitivity_range": {
          "type": "number",
          "default": 0.2,
          "description": "Percentage variation to test (+/- range)"
        }
      }
    },
    "output_schema": {
      "type": "object",
      "required": ["sensitivity_results", "stability_analysis", "recommendations"],
      "properties": {
        "service_task_name": {"type": "string"},
        "instructions": {"type": "string"},
        "sensitivity_results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "criterion_varied": {"type": "string"},
              "weight_change": {"type": "number"},
              "ranking_changes": {"type": "array"},
              "score_impacts": {"type": "object"}
            }
          }
        },
        "stability_analysis": {
          "type": "object",
          "properties": {
            "robust_winner": {"type": "string"},
            "stability_score": {"type": "number"},
            "critical_thresholds": {"type": "array"}
          }
        },
        "recommendations": {
          "type": "object",
          "properties": {
            "most_stable_option": {"type": "string"},
            "risk_factors": {"type": "array"},
            "weight_recommendations": {"type": "object"}
          }
        },
        "execution_metadata": {
          "type": "object",
          "properties": {
            "script_id": {"type": "string"},
            "script_version": {"type": "string"},
            "execution_timestamp": {"type": "string"},
            "execution_duration": {"type": "number"}
          }
        }
      }
    },
    "llm_template_instructions": {
      "format": "Extract decision alternatives, criteria, and weights from the current decision analysis context. Format as structured JSON for sensitivity analysis:",
      "output_structure": {
        "analysis_template": "sensitivity_analysis",
        "alternatives": "{{extract_alternatives_from_context}}",
        "criteria": "{{extract_criteria_from_context}}",
        "base_weights": "{{extract_weights_from_context}}",
        "sensitivity_range": 0.2
      },
      "context_instructions": [
        "Look for decision alternatives in the conversation",
        "Extract scoring criteria and their weights", 
        "Find current scores for each alternative against each criterion",
        "Preserve the structure from any previous decision analysis"
      ]
    },
    "metadata": {
      "author": "DADM Analysis Framework",
      "tags": ["decision", "sensitivity", "analysis", "robustness"],
      "complexity": "medium",
      "estimated_execution_time": 2.5
    }
  },
